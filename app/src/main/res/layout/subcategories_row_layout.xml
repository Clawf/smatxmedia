<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center" />
    <TextView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/subcategory_id"
        android:layout_toRightOf="@+id/cover"
        android:text ="00"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        />
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:id="@+id/category_id"
        android:layout_toRightOf="@+id/subcategory_id"
        android:text ="00"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subcategory_name"
        android:text ="NO Subcategories"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/category_id"
        android:layout_toEndOf="@+id/category_id" />

</RelativeLayout>
